{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "globals": [
      "vim",
      "describe",
      "it",
      "before_each",
      "after_each"
    ],
    "disable": [
      "undefined-global",
      "lowercase-global"
    ],
    "severity": {
      "undefined-doc-name": "Warning",
      "trailing-space": "Warning"
    }
  },
  "workspace.library": [
    "${3rd}/luv/library",
    "${3rd}/busted/library",
    "${path}/lua",
    "${path}/lua/plugins",
    "${path}/lua/config",
    "/opt/homebrew/Cellar/neovim/0.11.3/share/nvim/runtime/lua",
    "~/.local/share/nvim/lazy/LuaSnip/lua",
    "/usr/local/share/nvim/runtime/lua"
  ],
  "runtime": {
    "version": "LuaJIT",
    "path": [
      "?.lua",
      "?/init.lua"
    ]
  },
  "completion": {
    "callSnippet": "Replace",
    "keywordSnippet": "Replace"
  },
  "hint": {
    "enable": true,
    "paramName": "All",
    "setType": true
  },
  "format": {
    "enable": true,
    "defaultConfig": {
      "indent_style": "space",
      "indent_size": "4"
    }
  }
}
