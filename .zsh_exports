export GOPATH=$HOME/go
export NOTES="/Users/caot/Library/CloudStorage/GoogleDrive-cmthscb@gmail.com/My Drive/DriveSyncFiles/notes"
export ASDF_DATA_DIR=$HOME/.asdf
export GOOGLE_CLOUD_PROJECT="caot-ai-studio-sandbox-458302"

